    "version": "0.2.0",
    "configurations": [
        {
            "type": "graalvm",
            "request": "launch",
            "name": "Launch Node App",
            "outputCapture": "std",
            "program": "${workspaceFolder}/main.mjs",
            "runtimeArgs": [
                "--polyglot",
                "--jvm",
                "--inspect",
                "--vm.cp=./target/classes"
            ],
            "preLaunchTask": "compile"
        }
        
    ]
}